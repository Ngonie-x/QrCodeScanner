# main.kv

#:import ZBarCam kivy_garden.zbarcam.ZBarCam
#:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol

ScreenManagement:
    MainScreen:
    QRScreen:



<MainScreen>:
    name: 'mainscreen'
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Sub Menu Food Packaging'
            left_action_items: [["menu", lambda x: app.callback()]]
        
        MDFloatLayout:
            size_hint: 1, .9 

            MDTextField:
                id: qrinput
                size_hint: .8, None
                pos_hint: {'center_x': .5, 'y': .9}
                hint_text: 'Not from the food group'
                mode: 'rectangle'
                on_focus: app.get_qrcode()

            ScrollView:
                pos_hint: {'center_x':.5, 'y': .1}
                size_hint: .9, .8

                MDList:
                    id: qrlist

<QRScreen>:
    name: 'qrscreen'
    MDBoxLayout:
        orientation: 'vertical'
        

        MDToolbar:
            title: 'Scan QR Code'
            left_action_items: [["keyboard-backspace", lambda x: app.return_to_main()]]

        MDFloatLayout:
            id: scanqr
            size_hint: 1, .9

            ZBarCam:
                id: zbarcam
                size_hint: 1, .8
                pos_hint: {'center_x': .5, 'center_y': .5}
                # optional, by default checks all types
                code_types: ZBarSymbol.QRCODE, ZBarSymbol.EAN13

            MDLabel:
                size_hint: .5, .1
                pos_hint: {'center_x':.5, 'y':.01}
                # size: self.texture_size[0], 50
                text: app.get_code_data([str(symbol.data) for symbol in zbarcam.symbols])